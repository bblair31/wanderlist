<h2>Your Conversation with <%= @conversation.recipient(current_user).full_name %></h2>

<ul>
  <% @messages.each do |message| %>
    <% if message.body %>
      <li>
        <h4><%=image_tag(message.user.my_photo_url, :size => "20x20") %> <%= message.user.full_name %> - <%= message.message_time %></h4>
        <p><%= message.body %></p>
      </li>
    <% end %>
  <% end %>
</ul>

<%= form_for [@conversation, @message] do |f| %>
  <div class="field">
    <%= f.text_area :body, placeholder: "Your message" %>
  </div>

  <%= f.submit "Send" %>
<% end %>
